generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id           String      @id @default(uuid())
  total        Float
  status       String      @default("pending")
  createdAt    DateTime    @default(now())
  items        OrderItem[]
  observations String?

  @@map("orders")
}

model OrderItem {
  id           String  @id @default(uuid())
  orderId      String
  order        Order   @relation(fields: [orderId], references: [id])
  name         String
  size         String
  quantity     Int
  price        Float
  observations String?

  @@map("order_items")
}

model Pizza {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Float
  image       String
  createdAt   DateTime @default(now())

  @@map("pizzas")
}